<!DOCTYPE html>
<html>
<head>
  <title>Edit Team</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>Edit Team</h1>
  <form action="/teams/<%= team._id %>?_method=PUT" method="POST">
    <label for="team_name">Team Name:</label>
    <input type="text" id="team_name" name="team_name" value="<%= team.team_name %>" required>
    
    <label for="league">League:</label>
    <input type="text" id="league" name="league" value="<%= team.league %>" required>

    <label for="your_team">Your Team:</label>
    <input type="checkbox" id="your_team" name="your_team" <% if (team.your_team) { %>checked<% } %>>
    
    <button type="submit">Update Team</button>
  </form>
  <form action="/teams/<%= team._id %>?_method=DELETE" method="POST">
    <button type="submit">Delete</button>
  </form>
</body>
</html>